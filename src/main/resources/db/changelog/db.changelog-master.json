{
  "databaseChangeLog": [
    {
      "changeSet": {
        "id": "createTable",
        "author": "sabrinacielas",
        "changes": [
          {
            "createTable": {
              "tableName": "sectors",
              "columns": [
                {
                  "column": {
                    "name": "id",
                    "type": "int",
                    "autoIncrement": true,
                    "constraints": {
                      "primaryKey": true,
                      "primaryKeyName": "pk_id_sectors"
                    }
                  }
                },
                {
                  "column": {
                    "name": "sector_id",
                    "type": "int",
                    "constraints": {
                      "nullable": false,
                      "unique": true
                    }
                  }
                },
                {
                  "column": {
                    "name": "name_en",
                    "type": "varchar(255)",
                    "constraints": {
                      "nullable": false
                    }
                  }
                },
                {
                  "column": {
                    "name": "name_de",
                    "type": "varchar(255)",
                    "constraints": {
                      "nullable": false
                    }
                  }
                }
              ]
            }
          },
          {
            "createTable": {
              "tableName": "stocks",
              "columns": [
                {
                  "column": {
                    "name": "id",
                    "type": "int",
                    "autoIncrement": true,
                    "constraints": {
                      "primaryKey": true,
                      "primaryKeyName": "pk_id_stocks"
                    }
                  }
                },
                {
                  "column": {
                    "name": "name",
                    "type": "varchar(255)",
                    "constraints": {
                      "nullable": false
                    }
                  }
                },
                {
                  "column": {
                    "name": "symbol",
                    "type": "varchar(255)",
                    "constraints": {
                      "nullable": false,
                      "unique": true
                    }
                  }
                },
                {
                  "column": {
                    "name": "sector_id",
                    "type": "int",
                    "constraints": {
                      "nullable": false,
                      "foreignKeyName": "fk_sector_stocks",
                      "references": "sectors(\"sector_id\")"
                    }
                  }
                }
              ]
            }
          },
          {
            "createTable": {
              "tableName": "stocks_data",
              "columns": [
                {
                  "column": {
                    "name": "id",
                    "type": "int",
                    "autoIncrement": true,
                    "constraints": {
                      "primaryKey": true,
                      "primaryKeyName": "pk_id_stocksData"
                    }
                  }
                },
                {
                  "column": {
                    "name": "symbol",
                    "type": "varchar(255)",
                    "constraints": {
                      "nullable": false,
                      "foreignKeyName": "fk_stocksData_stocks",
                      "references": "stocks(\"symbol\")"
                    }
                  }
                },
                {
                  "column": {
                    "name": "adjusted_close",
                    "type": "decimal",
                    "constraints": {
                      "nullable": false
                    }
                  }
                },
                {
                  "column": {
                    "name": "date",
                    "type": "date",
                    "constraints": {
                      "nullable": false
                    }
                  }
                }
              ]
            }
          },
          {
            "sqlFile": {
              "comment": "initialInsert",
              "endDelimiter": "GO",
              "splitStatements": true,
              "relativeToChangelogFile": "true",
              "path": "./initial-insert.sql",
              "stripComments": true
            }
          }
        ]
      }
    },
    {
      "changeSet": {
        "id": "addUniqueConstraint for stock-data",
        "author": "till pilarczyk",
        "changes": [
          {
            "addUniqueConstraint": {
              "columnNames": "symbol, date",
              "constraintName": "stock-date-unique-constraint",
              "schemaName": "public",
              "tableName": "stocks_data"
            }
          }
        ]
      }
    },
    {
      "changeSet": {
        "id": "createUsersAndWatchlist",
        "author": "sabrinacielas",
        "changes": [
          {
            "createTable": {
              "tableName": "users",
              "columns": [
                {
                  "column": {
                    "name": "id",
                    "type": "int",
                    "autoIncrement": true,
                    "constraints": {
                      "primaryKey": true,
                      "primaryKeyName": "pk_id_users"
                    }
                  }
                },
                {
                  "column": {
                    "name": "mail",
                    "type": "varchar(255)",
                    "constraints": {
                      "nullable": false,
                      "unique": true
                    }
                  }
                },
                {
                  "column": {
                    "name": "password",
                    "type": "varchar(255)",
                    "constraints": {
                      "nullable": false
                    }
                  }
                },
                {
                  "column": {
                    "name": "watchlist_id",
                    "type": "uuid",
                    "constraints": {
                      "nullable": false,
                      "unique": true
                    }
                  }
                }
              ]
            }
          },
          {
            "createTable": {
              "tableName": "watchlist_data",
              "columns": [
                {
                  "column": {
                    "name": "id",
                    "type": "int",
                    "autoIncrement": true,
                    "constraints": {
                      "primaryKey": true,
                      "primaryKeyName": "pk_id_watchlists"
                    }
                  }
                },
                {
                  "column": {
                    "name": "watchlist_id",
                    "type": "uuid",
                    "constraints": {
                      "nullable": false,
                      "foreignKeyName": "fk_watchlist_users",
                      "references": "users(\"watchlist_id\")"
                    }
                  }
                },
                {
                  "column": {
                    "name": "symbol",
                    "type": "varchar(255)",
                    "constraints": {
                      "nullable": false,
                      "foreignKeyName": "fk_watchlist_stocks",
                      "references": "stocks(\"symbol\")"
                    }
                  }
                }
              ]
            }
          }
        ]
      }
    },
    {
      "changeSet": {
        "id": "modifiy Watchlist for Notifications",
        "author": "till pilarczyk",
        "changes": [
          {
            "addColumn": {
              "tableName": "watchlist_data",
              "columns": [
                {
                  "column": {
                    "afterColumn": "symbol",
                    "name": "seen",
                    "type": "boolean"
                  }
                },
                {
                  "column": {
                    "name": "day_interval",
                    "type": "integer"
                  }
                },
                {
                  "column": {
                    "name": "percentage",
                    "type": "real"
                  }
                }
              ]
            }
          }
        ]
      }
    }
  ]
}
